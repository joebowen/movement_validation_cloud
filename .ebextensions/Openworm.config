container_commands:
  01_syncdb:
    command: "python manage.py syncdb --noinput"
    leader_only: true
  02_create_superuser_for_django_admin:
    command: "python manage.py create_superuser"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "Openworm_Project.settings"
    "application_stage": "staging"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: ../Openworm_Project/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"
  - option_name: SUPER_USER
    value: django
  - option_name: SUPER_USER_PASSWORD
    value: change